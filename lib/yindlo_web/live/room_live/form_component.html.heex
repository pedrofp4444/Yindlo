<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="room-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :furniture_count %>
    <%= number_input f, :furniture_count %>
    <%= error_tag f, :furniture_count %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
